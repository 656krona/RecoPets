<div class="row justify-content-center record-content py-3 p-md-5">
  <div class="col-12 px-md-5">
    <%= month_calendar events: @records do |date, records| %>
      <% records.each do |record| %>
      <%#= link_to "クリック", edit_pet_record_path(@pet,record.id) %>
        <%= link_to edit_pet_record_path(@pet,record.id) do%>
          <%= date.day %>
        <% end %>
        <div class="text-left pt-3">
          <% if record.memo.present? %>
            <span class="memo-score">
              <span class="memo-score">
                <% if record&.score >= 0.8 || record&.score == 0.0 %>
                  <i class="far fa-grin-squint fa-1x" style="color:pink"></i>
                <% elsif record&.score >= 0.6 %>
                  <i class="far fa-smile fa-1x" style="color:orange"></i>
                <% elsif record&.score >= 0.4 %>
                  <i class="far fa-meh fa-1x" style="color:green"></i>
                <% else %>
                  <i class="far fa-frown fa-1x" style="color:lightblue"></i>
                <% end %>
              </span>
            </span>
          <% end %>
          <% if record.memo.present? || record.record_image.present? %>
            <span class="text-left pt-3"><i class="fas fa-pencil-alt fa-1x" style="color:grey"></i></span>
          <% end %>
          <% if record.content_type == true || record.history.present? || record.hospital_id.present? %>
            <span class="text-left pt-3"><i class="fas fa-clinic-medical fa-1x" style="color:grey"></i></span>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>