<div class="row align-items-center admin-content">
  <div class="admin-select col-12">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <h3 class="select-title">会員詳細</h3>
          <table class="table">
            <tr>
              <th>会員ID</th>
              <td><%= @user.id %></td>
            </tr>
            <tr>
              <th>氏名</th>
              <td><%= @user.name %></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%= @user.email %></td>
            </tr>
            <tr>
              <th>ペット登録数</th>
              <td><%= @user.pets.count %></td>
            </tr>
            <tr>
              <th>トピック作成数</th>
              <td>
                <%= link_to admins_users_path do %>
                  <%= @user.topics.count %>
                <% end %>
              </td>
            </tr>
            <tr>
              <th>コメント作成数</th>
              <td>
                <%= link_to admins_users_path do %>
                  <%= @user.comments.count %>
                <% end %>
              </td>
            </tr>
          </table>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-md-10 text-right">
          <%= link_to "編集する", edit_admins_user_path(@user), class: "btn btn-info" %>
          <%= link_to "戻る", admins_users_path, class: "btn btn-outline-info" %>
        </div>
      </div>
    </div>
  </div>
</div>