<div class="row align-items-center admin-content">
  <div class="admin-select col-12">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <h3 class="select-title">会員一覧</h3>
        <div class="row">
          <table class="table">
            <thead>
              <tr>
                <th>会員ID</th>
                <th>氏名</th>
                <th>メールアドレス</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
              <tr>
                <td>
                   <%= user.id %>
                </td>
                <td>
                  <%= link_to admins_user_path(user.id) do %>
                    <%= user.name %>
                  <% end %>
                </td>
                <td>
                  <%= user.email %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>