<div class="row align-items-center admin-content">
  <div class="admin-select col-12">
    <div class="row justify-content-center">
      <div class="col-md-8 text-left">
        <h3 class="select-title text-center">会員編集画面</h3>
          <%= form_with model: @user, url: admins_user_path, method: :PATCH, local: true do |f| %>
          <%= render 'layouts/error_messages', model: @user %>
          <form>
            <div class="form-group row">
              <label for="ID" class="col-4 col-form-label">会員ID</label>
              <div class="col-8">
                <%= @user.id %>
              </div>
            </div>
            <div class="form-group row">
              <label for="Name" class="col-4 col-form-label">氏名</label>
              <div class="col-8">
                <%= f.text_field :name, id:"Name" %>
              </div>
            </div>
            <div class="form-group row">
              <label for="Email" class="col-4 col-form-label">メールアドレス</label>
              <div class="col-8">
                <%= f.email_field :email, id:"Email" %>
              </div>
            </div>
          <%= f.submit "登録する", class: "btn btn-info" %>
          <%= link_to "戻る", admins_user_path, class: "btn btn-outline-info" %>
          <% end %>
        </form>
      </div>
    </div>
  </div>
</div>