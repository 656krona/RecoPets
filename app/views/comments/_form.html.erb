<% if user_signed_in? %>
  <div class="row my-4">
    <div class="col-12 text-left">
      <h5>コメントする</h5>
      <%= form_with model: [topic, comment] ,remote: true do |f| %>
          <div class="form-group">
            <div class="form-group">
              <%= f.text_area :comment, class: 'form-control', rows: 6, placeholder: "コメントをここに" %>
            </div>
            <div class = "form-group">
              <%= f.url_field :url, class: 'form-control', rows: 1, placeholder: "URLを引用" %>
            </div>
            <div class = "form-group">
              <div>
                <%= attachment_image_tag @comment, :comment_image, src: "", id: "comment_image", size: "200x150", alt:"Image preview", class: "item_prev", fallback: "no_image_topic.svg", :size =>'200x150' %>
              </div>
              <div>
              <%= f.attachment_field :comment_image, id: "post_img" %>
              </div>
            </div>
              <%= f.submit '送信', class: 'btn btn-outline-info btn-comment mt-3' %>
          </div>
      <% end %>
    </div>
  </div>
<% end %>

<script>
  $(function(){
    function readURL(input) {
      if (input.files && input.files[0]) {
        var reader = new FileReader();
        reader.onload = function (e) {
          $('#comment_image').attr('src', e.target.result);
        }
        reader.readAsDataURL(input.files[0]);
      }
    }
    $("#post_img").change(function(){
      readURL(this);
    });
})

</script>