<div class="row justify-content-center topic-wrap">
  <div class="col-12 col-md-8 topic-content mr-2">
    <div class="row topic-head pb-4">
      <div class="col-2">
        <%= attachment_image_tag(@topic, :topic_image, :fill, 70, 70, fallback: "no_image.jpg", size: '70x70') %>
      </div>
      <div class="col-10 pl-5">
        <div class="row align-items-center topic-info">
          <i class="fas fa-comment-dots fa-1x"></i>
          <%= @comments.count %>コメント
          <%= I18n.l(@topic.created_at, format: :short) %>
        </div>
        <div class="row mt-2">
          <h3 class="topic-title"><%= @topic.title %></h3>
        </div>
        <div class="row mt-2">
          <h6 class="topic-text"><%= @topic.content %></h6>
        </div>
        <div class="row mt-2">
          <%= link_to "#{@topic.url}", class:"btn btn-outline-info btn-sm" do%>
            <%= @topic.url.truncate(27) %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="row justify-content-center mt-4">
      <%= paginate @comments,class: "pagination" %>
    </div>

    <div id="comment_area">
      <%= render 'comments/comment', comments: @comments %>
    </div>

    <div id="comment_form">
      <%= render 'comments/form', topic: @topic, comment: @comment %>
    </div>

  </div>
  <div class="col-12 col-md-3 ml-2 side-content">
    <div class="row mt-4">
      <%= link_to "トピックを作成", new_topic_path, class:"btn btn-defalt btn-block btn-topic text-center" %>
    </div>
    <div class="row category-content mt-3">
      <table class="table">
        <thead>
          <tr>
            <th class="category-title">
              <span>カテゴリ検索</span>
            </th>
          </tr>
        </thead>
        <tbody>
          <tr>
          <% @categories.each do |category| %>
            <td style="border-style: none;" class="text-left">
              <%= link_to topics_path(category_id: category.id) do %>
              <%= category.name %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <span id="back">
      <a href="#">
        <i class="fas fa-arrow-circle-down fa-3x"></i>
      </a>
    </span>
    <script>
      $(function() {

        $('#back a').on('click',function(){
          $('body, html').animate({
            scrollTop: $(document).height()
            }, 1500);
            return false;
           });

        });
    </script>
  </div>
</div>