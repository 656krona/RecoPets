<% if comment.favorited_by?(current_user) %>
    <%= link_to topic_comment_likes_path(topic,comment), method: :delete, remote: true do %>
      <i class="fas fa-heart" aria-hidden="true" style="color: #e54f58;"></i>
      <%= comment.likes.count %>
    <% end %>
<% else %>
    <%= link_to topic_comment_likes_path(topic,comment), method: :post, remote: true do %>
      <i class="far fa-heart" aria-hidden="true"></i>
      <%= comment.likes.count %>
    <% end %>
<% end %>