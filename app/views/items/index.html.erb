<div class="row align-items-center">
  <div class="col-12 col-md-12 item-content">
    <div class="row">
      <div class="col-12">
        <div class="row align-items-center my-4">
          <div class="col-12 col-md-3 offset-md-4">
            <h3 class="item-heading">在庫管理</h3>
          </div>
          <div class="col-12 col-md-5">
            <button type="button" class="btn btn-item" data-toggle="modal" data-target="#post">
              <i class="fas fa-plus"></i> アイテム登録</button>
          </div>
        </div>
        <div class="row align-items-center">
          <div class="col-12">
            <% if @items.present? %>
              <div id="item">
                <%= render 'items/item', items: @items %>
              </div>
            <% else %>
              <div class="row justify-content-center pt-5">
                <h3 class="item-text pt-5 mb-3">アイテムを登録してください</h3>
              </div>
              <div class="row justify-content-center">
                <h4 class="item-text mb-0">登録が完了するとここにアイテムが表示されます</h4>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="post" tabindex="-1" role="dialog" aria-hidden="true">
    <%= render 'items/modal', item: @item %>
  </div>

</div>