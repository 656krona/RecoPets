<% items.each do |item| %>
  <div id="item_<%= item.id %>" class="row py-5 item-list">
    <div class="col-4 py-0 px-0">
      <%= item.name %>
    </div>
    <div class="col-3 py-0 px-0">
      <div class="progress">
        <div class="progress-bar bg-success" role="progress-bar" style="width: <%= item.count %>%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"><%= item.count %>%</div>
      </div>
    </div>
    <div class="col py-0 px-0">
      <%#= form_with model: item, method: :patch, local: true do |f| %>
        <%#= f.hidden_field :amount ,:value => 100 %>
        <%#= f.hidden_field :id ,:value => item.id %>
        <%#= f.submit "100%", class: "btn btn-info btn-sm"%>
      <%# end %>
      <%= link_to '編集', edit_item_path(item.id), class: "btn btn-outline-info btn-sm ml-2" %>

      <%= link_to item_path(item), method: :delete, remote: true, class: "btn btn-trash rounded-circle p-0 ml-2" do%>
        <i class="fas fa-trash-alt fa-1x mx-2 my-2"></i>
      <% end %>
    </div>
  </div>
<% end %>
