<div class="row">
  <div class="col">
  </div>
  <div class="col-6 topic-form">
      <div class="row">
        <div class="col-12">
          <%= form_with model: @topic do |f| %>
            <div class = "form-group">
              <%= f.text_area :title, class: 'form-control', rows: 1, placeholder: "タイトルを入力", autofocus: true %>
            </div>
            <div class = "form-group">
              <%= f.text_area :content, class: 'form-control', rows: 7, placeholder: "本文を入力", autofocus: true %>
            </div>
            <div class = "form-group">
             <%= f.attachment_field :topic_image %>
           </div>
        <% end %>
        </div>
      </div>
  </div>
  <div class="col">
  </div>
</div>