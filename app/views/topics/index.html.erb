<div class="row justify-content-center topic-wrap">
  <div class="col-12 col-md-8 topic-content mr-2">
    <div class="row">
      <div class="col-12 topic-head">
        <h3 class="topic-head-text">トピック一覧</h3>
      </div>
    </div>
    <% @topics.each do |topic| %>
      <div class="row align-items-center">
        <div class="col-2">
          <%= attachment_image_tag(topic, :topic_image, :fill, 50, 50, fallback: "no-image.jpg") %>
        </div>
        <div class="col-10">
        <h5 class="topic-title"><%= topic.title %></h5>
        </div>
        <div class="col-8">
      </div>
    <% end %>

  </div>
  <div class="col-12 col-md-3 ml-2 side-content">
    <!---- トピック作成モーダル ----->
    <div class="row mt-4">
      <button type="button" class="btn-block btn-topic" data-toggle="modal" data-target="#hospital">
      トピックを作成
      </button>
    </div>
    <%= render 'topics/modal', topic: @topic %>
    <div class="row category-content mt-3">
      <table class="table">
        <thead>
          <tr>
            <th class="category-title">
              <span>カテゴリ検索</span>
            </th>
          </tr>
        </thead>
        <tbody>
          <tr>
          <% @categories.each do |category| %>
            <td style="border-style: none;" class="text-left">
              <%= link_to topics_path(category_id: category.id) do %>
              <%= category.name %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>



