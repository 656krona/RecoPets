<div class="row justify-content-center topic-wrap">
  <div class="col-12 col-md-8 topic-content mr-2">
    <div class="row">
      <div class="col-12 topic-head pb-4">
        <%= link_to topics_path, class: "topic-head-text" do %>
          <h3 class="topic-head-text">トピック一覧</h3>
        <% end %>
      </div>
    </div>
    <% @topics.each do |topic| %>
      <div class="row align-items-center pt-4 pb-4 topic-list">
        <div class="col-2">
          <%= attachment_image_tag(topic, :topic_image, :fill, 50, 50, fallback: "no_image.jpg", size: '50x50') %>
        </div>
        <div class="col-10">
          <div class="row align-items-center topic-info">
            <i class="fas fa-comment-dots fa-1x"></i>
            コメント数
            作成日
          </div>
          <div class="row">
            <h3 class="topic-title"><%= topic.title %></h3>
          </div>
          <div class="row">
            <%= link_to '参考サイト', "#{topic.url}", class:"btn btn-outline-info btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>

  </div>
  <div class="col-12 col-md-3 ml-2 side-content">
    <div class="row mt-4">
        <%= link_to "トピックを作成", new_topic_path, class:"btn btn-defalt btn-block btn-topic text-center" %>
    </div>
    <div class="row category-content mt-3">
      <table class="table">
        <thead>
          <tr>
            <th class="category-title">
              <span>カテゴリ検索</span>
            </th>
          </tr>
        </thead>
        <tbody>
          <tr>
          <% @categories.each do |category| %>
            <td style="border-style: none;" class="text-left">
              <%= link_to topics_path(category_id: category.id) do %>
              <%= category.name %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>



