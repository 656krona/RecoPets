<div class="row align-items-center justify-content-center">
  <div class="col-10 col-md-8 pet-form">
    <div class="row text-right mt-4">
      <div class="col-12">
        <%= link_to user_path(current_user.id) do%>
          <i class="fas fa-times-circle fa-3x btn-close"></i>
        <% end %>
      </div>
    </div>
    <div class="row justify-content-center form-area">
      <div class="col-md-8">
        <h3 class="form-title">登録情報を編集してください</h3>
        <%= render 'layouts/error_messages', model: @user %>

        <%= form_with model: @user, local: true do |f| %>
            <div class="form-group">
              <div class="field pb-3 text-left">
                <%= f.label :name %>
                <%= f.text_field :name, autofocus: true, class:"form-control" %>
              </div>
            </div>
            <div class="form-group">
              <div class="field pb-3 text-left">
                <%= f.label :email %>
                <%= f.text_field :email, autofocus: true, class:"form-control" %>
              </div>
            </div>
            <div class="field pb-3">
              <div>
              <%= attachment_image_tag @user, :profile_image, src: "", id: "img-prev", size: "200x200", alt:"Image preview", class: "item_prev rounded-circle mb-4", fallback: "no_image.jpg", :size =>'200x200' %>
              </div>
              <div>
                <%= f.attachment_field :profile_image, id: "post_img" %>
              </div>
            </div>

            <div class="field">
              <%= f.submit "編集する", class:"btn btn-info btn-block my-5" %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
